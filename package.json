{
  "name": "voice-dev-assistant",
  "version": "1.0.0",
  "description": "Voice-enabled developer tool with AI integration",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "install-deps": "npm install"
  },
  "keywords": [
    "developer-tool",
    "voice",
    "ai",
    "electron",
    "gemini"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "marked": "^9.1.6",
    "monaco-editor": "^0.44.0",
    "diff": "^5.1.0",
    "highlight.js": "^11.9.0"
  },
  "build": {
    "appId": "com.voicedev.assistant",
    "productName": "Voice Dev Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
